{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "skipDefaultLibCheck": true,
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@layout/*": [
        "layout/*"
      ],
      "@ui/*": [
        "ui/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@db/*": [
        "db/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@fonts/*": [
        "fonts/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@widgets/*": [
        "widgets/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@redux/*": [
        "redux/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}